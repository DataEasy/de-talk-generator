<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <title><%= t('title.system_title') %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to t('title.system_title'), home_path, class: 'navbar-brand' %>
      </div>
      <% if user_signed_in? %>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="<%= active_if_current_page(home_path, true) %>">
            <%= link_to t('menu.home'), home_path %>
          </li>
          <li class="<%= active_if_current_page(talks_path) %>">
            <%= link_to t('menu.my_talks'), talks_path %>
          </li>
        </ul>
        <p class="navbar-text navbar-right">
          <%= current_user.username %>
          <%= link_to t('menu.exit'), destroy_user_session_path, class: 'navbar-link' %>
        </p>
      </div><!-- /.nav-collapse -->
      <% end %>
    </div><!-- /.container -->
  </nav><!-- /.navbar -->

  <div class="container">
    <%= render 'shared/messages' %>
    <%= yield %>
  </div><!--/.container-->


  <!-- Bootstrap core JavaScript
  ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <%= javascript_include_tag 'footer', 'data-turbolinks-track' => true %>
</body>
</html>
